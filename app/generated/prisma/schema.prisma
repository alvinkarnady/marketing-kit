generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Theme {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
